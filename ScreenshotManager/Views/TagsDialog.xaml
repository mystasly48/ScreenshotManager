<Border x:Class="ScreenshotManager.Views.TagsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:ScreenshotManager.Views"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Background="{DynamicResource RegionBrush}">
  <Border.Resources>
    <Style x:Key="TagCustomStyle"
           BasedOn="{StaticResource TagBaseStyle}"
           TargetType="hc:Tag">
      <Setter Property="Content"
              Value="{Binding}" />
      <Setter Property="Margin"
              Value="5" />
      <Setter Property="ShowCloseButton"
              Value="True" />
    </Style>
  </Border.Resources>
  <Grid>
    <hc:SimplePanel Width="600">
      <StackPanel>
        <ScrollViewer Margin="10"
                      Height="100"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
          <hc:TagContainer ItemsSource="{Binding Tags}"
                           ItemContainerStyle="{StaticResource TagCustomStyle}"
                           Padding="5" />
        </ScrollViewer>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center">
          <hc:TextBox Name="TagTextBox"
                      Text="{Binding TagName}"
                      Margin="10"
                      Width="300">
            <hc:TextBox.InputBindings>
              <KeyBinding Key="Return"
                          Command="{Binding AddTagCommand}"
                          CommandParameter="{Binding ElementName=TagTextBox, Path=Text}" />
            </hc:TextBox.InputBindings>
          </hc:TextBox>
          <Button Margin="10"
                  Content="Add Tag"
                  Command="{Binding AddTagCommand}"
                  CommandParameter="{Binding ElementName=TagTextBox, Path=Text}" />
        </StackPanel>
        <Button Content="Close"
                Command="hc:ControlCommands.Close"
                Width="100"
                Margin="10" />
      </StackPanel>
    </hc:SimplePanel>
  </Grid>
</Border>
