<Window x:Class="ScreenshotManager.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ScreenshotManager.Views"
        mc:Ignorable="d"
        Title="Screenshot Manager"
        Height="450"
        Width="800">
  <Grid>
    <StackPanel Orientation="Vertical">
      <Grid Height="50">
        <Button Content="Take Screenshot"
                Command="{Binding TakeScreenshotCommand}"
                Width="100"
                Height="25"
                Margin="10"
                HorizontalAlignment="Right"
                VerticalAlignment="Top" />
      </Grid>
      <Image Source="{Binding TakenScreenshot}" Stretch="Uniform"/>
    </StackPanel>
  </Grid>
</Window>
